#!/bin/sh
# AllHands sync-back on protected branch merge
if [ -n "$ALLHANDS_PATH" ]; then
    npx tsx "$ALLHANDS_PATH/src/cli.ts" sync-back --auto 2>/dev/null || true
fi

# Project-specific post-merge (TARGET repos)
if [ -f ".husky/project/post-merge" ]; then
    . "$(dirname "$0")/project/post-merge"
fi
