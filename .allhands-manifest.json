{
  "$comment": "AllHands Distribution Manifest - defines which files are distributed vs internal",
  "distribute": [
    ".claude/agents/**",
    ".claude/skills/**",
    ".claude/commands/**",
    ".claude/hooks/**",
    ".claude/envoy/**",
    ".claude/output-styles/**",
    ".claude/.gitignore",
    ".claude/settings.json",
    ".claude/statusline.sh",
    "CLAUDE.md",
    "CLAUDE.project.md"
  ],
  "exclude": [
    "**/__pycache__/**",
    "**/*.pyc",
    "**/.DS_Store",
    "**/.env",
    "**/.venv/**",
    ".claude/envoy.log",
    ".claude/metrics.jsonl",
    ".claude/plans/**",
    ".claude/settings.local.json",
    ".claude/envoy/.knowledge/**",
    ".claude/envoy/dist/**",
    ".claude/envoy/wasm/**",
    "pnpm-lock.yaml"
  ],
  "internal": [
    "src/**",
    "bin/**",
    "tsconfig.json",
    "scripts/hooks/**",
    "scripts/allhands.sh",
    ".allhands-manifest.json",
    ".github/**",
    "docs/**",
    "README.md",
    "package.json",
    "package-lock.json",
    "ISSUES.md"
  ]
}
