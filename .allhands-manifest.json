{
  "$comment": "AllHands Distribution Manifest - defines which files are distributed vs internal",
  "distribute": [
    ".claude/agents/**",
    ".claude/skills/**",
    ".claude/commands/**",
    ".claude/hooks/**",
    ".claude/envoy/**",
    ".claude/output-styles/**",
    ".claude/settings.json",
    ".claude/docs/**",
    ".husky/**",
    "CLAUDE.md",
    "CLAUDE.project.md"
  ],
  "exclude": [
    "**/.venv/**",
    "**/__pycache__/**",
    "**/*.pyc",
    "**/.git/**",
    ".claude/settings.local.json",
    ".claude/plans/**"
  ],
  "internal": [
    "scripts/allhands/**",
    "scripts/allhands.sh",
    "scripts/hooks/**",
    ".allhands-manifest.json",
    ".github/**",
    "README.md",
    "package.json",
    "package-lock.json"
  ]
}
