{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "PARALLEL_MAX_WORKERS": "3",
    "PROJECT_NAME": "test-target"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/startup.sh"
          }
        ]
      },
      {
        "matcher": "scan-skills",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/scan_skills.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/capture-queries.sh"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/enforce_planning.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "(WebFetch|Bash)",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/github_url_to_gh.py"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/enforce_research_fetch.py"
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/enforce_research_search.py"
          }
        ]
      },
      {
        "matcher": "Bash(*grep*)|Bash(*find*)",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/enforce_rg.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/validate_skill.py"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/validate_skill.py"
          }
        ]
      }
    ]
  },
  "companyAnnouncements": [
    "Kalem's AI Agent Framework Rules!"
  ],
  "enableAllProjectMcpServers": false,
  "permissions": {
    "allow": [
      "Write",
      "Edit",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Read(~/.claude-code-docs/docs/*)",
      "Bash(.claude/envoy/envoy tavily search:*)",
      "Bash(.claude/envoy/envoy tavily extract:*)",
      "Bash(.claude/envoy/envoy vertex ask:*)",
      "Bash(.claude/envoy/envoy vertex validate:*)",
      "Bash(.claude/envoy/envoy vertex review:*)",
      "Bash(.claude/envoy/envoy vertex architect:*)",
      "Bash(.claude/envoy/envoy plans status:*)",
      "Bash(.claude/envoy/envoy plans capture:*)",
      "Bash(.claude/envoy/envoy plans cleanup:*)",
      "Bash(.claude/envoy/envoy plans create:*)",
      "Bash(.claude/envoy/envoy plans set-status:*)",
      "Bash(.claude/envoy/envoy plans frontmatter:*)",
      "Bash(.claude/envoy/envoy plans clear-queries:*)",
      "Bash(.claude/envoy/envoy xai search:*)",
      "Bash(.claude/envoy/envoy perplexity research:*)",
      "Bash(.claude/envoy/envoy parallel spawn:*)",
      "Bash(.claude/envoy/envoy parallel status:*)",
      "Bash(.claude/envoy/envoy parallel results:*)",
      "Bash(.claude/envoy/envoy parallel cleanup:*)",
      "SlashCommand(/parallel-discovery:*)",
      "SlashCommand(/plan:*)",
      "SlashCommand(/plan-checkpoint:*)",
      "SlashCommand(/parallel-orchestration:*)"
    ],
    "deny": [],
    "ask": []
  }
}